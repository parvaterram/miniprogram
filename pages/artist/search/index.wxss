/**index.wxss**/
 .container {
  background-color: #eaeaea;
}

.srch-bar {
  height: 80rpx;
  text-align: center;
  background-color: #eaeaea;
  padding-top: 10rpx;
}

.search {
  width: 620rpx;
  height: 60rpx;
  border-radius: 40rpx;
  background: #fff;
  text-align: left;
  padding-left: 30rpx;
  font-size: 24rpx;
}

.btn-srch {
  width: 100rpx;
  height: 60rpx;
  color: #101010;
  font-size: 24rpx;
  border: 1rpx solid #eaeaea;
  background: #eaeaea;
}

.ar-item {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 10rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.avatar {
  flex-basis: 180rpx;
  position: relative;
}

.avatar .live-sta {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 40rpx;
  color: #fff;
  background-color: rgba(0,0,0,0.6);
  text-align: center;
}

.avatar .img-avatar {
  width: 180rpx;
  height: 180rpx;
}

.avatar .gender {
  position: absolute;
  top: 0;
  left: 0;
  width: 44rpx;
  height: 44rpx;
}

.info {
  flex-grow: 1;
  padding-left: 10rpx;
  line-height: 40rpx;
}

.info .type {
  display: inline-block;
  width: 120rpx;
  height: 60rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  background-color: #059F9F;
  border-radius: 4rpx;
}

.loading-panel {
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #eaeaea;
}

.loading {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
