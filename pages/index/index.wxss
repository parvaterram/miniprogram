/**index.wxss**/
 .container {
  background-color: #eaeaea;
}


.help {
  color: #e51c23;
  background-color: #fff;
}

.swiper {
  width: 100%;
  height: 430rpx;
  background-color: #000;
}
.swiper-item {
  vertical-align: middle;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.ar-item {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 10rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.avatar {
  flex-basis: 180rpx;
  position: relative;
}

.avatar .live-sta {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 40rpx;
  color: #fff;
  background-color: rgba(0,0,0,0.6);
  text-align: center;
}

.avatar .img-avatar {
  width: 180rpx;
  height: 180rpx;
}

.avatar .gender {
  position: absolute;
  top: 0;
  left: 0;
  width: 44rpx;
  height: 44rpx;
}

.info {
  flex-grow: 1;
  padding-left: 10rpx;
  line-height: 40rpx;
}

.info .type {
  display: inline-block;
  width: 120rpx;
  height: 60rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  background-color: #059F9F;
  border-radius: 4rpx;
}

.info .auth-type {
  display:inline-block;
  height:60rpx;
  color:#fff;
  line-height:60rpx;
  text-align:center;
  background-color: #8bc34a;
  border-radius:4rpx;
  margin-left: 10rpx;
  padding: 0 14rpx;
}
