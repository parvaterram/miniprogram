/**index.wxss**/
 .container {
  background-color: #eaeaea;
  overflow: hidden;
}
.title {
  position: fixed;
  top: 0;
  width: 100%;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  background: #fff;
  z-index: 999;
}
.team-list {
  margin-top: 70rpx;
}
.team-item {
    padding: 10rpx 20rpx;
    margin-bottom: 5px;
    background: #fff;
    color: #101010;
}
.t-c {
  overflow: hidden;
}
.avatar {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #bbb;
  float: left;
  overflow: hidden;
}
  .avatar image {
    width: 100%;
    height: 100%;
  }
  .avatar .default {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    text-align: center;
    line-height: 1.5; 
    padding: 0 16rpx;
    font-size: 28rpx;
  }
.name {
  line-height: 1.7;
  padding: 0 10rpx;
  float: left;
  width: 50%;
}
  .name .dd {
    display: inline-block;
    width: 100rpx;
  }
  .name .dt {
    color: #E51C23;
  }
  .name .titles {
    display: block;
    width: 100%;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
  }
.join-btn {
  width: 200rpx;
  height: 60rpx;
  background-color: #46C4FF;
  color: #fff;
  float: right;
}
.b-c {
  color: #E51C23;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  overflow: hidden;
  position: fixed;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 100%;
  height: 320rpx; 
  background-color: #fff;
  z-index: 9999;
  padding-top: 20rpx;
}
  .m-title {
    line-height: 80rpx;
    text-align: center;
    font-size: 16px;
    color: #00B7FF;
  }
  .m-body {
    padding: 0 20rpx;
    color: #101010;
  }
    .m-body>view {
      margin-bottom: 20rpx;
    }
  .m-foot {
    
  }
    .m-foot button {
      width: 50%;
      height: 120rpx;
      line-height: 120rpx;
      font-size: 36rpx;
      color: #fff;
    }
    .m-foot .submit-btn {
      background-color: #46C4FF;
    }
    .m-foot .close-btn {
      background-color: #BBB;
    }
