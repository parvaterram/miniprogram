 .container {
  background-color: #eaeaea;
  overflow: hidden;
  color: #101010;
  font-size: 24rpx;
}
.container>view:not(:last-child) {
  background-color: #fff;
}
.banner {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}
  .banner image {
    width: 100%;
  }
.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx;
  margin-top: 10rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 10rpx;
}
  .avatar image {
    width: 100%;
  }
.name {
  width: 50%;
  color: #434343;
  font-size: 24rpx;
}
  .name .titles {
    width: 100%;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    font-size: 28rpx;
  }
.num {
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: space-evenly;
  margin-top: 10rpx;
}
  .num>view {
    width: 33.33%;
  }
  .num .dt {
    line-height: 60rpx;
    font-size: 32rpx;
  }
  .num .dd {
    line-height: 40rpx;
    font-size: 24rpx;
  }
.notice {
  height: 160rpx;
  margin-top: 10rpx;
  padding: 20rpx 30rpx;
}
  .notice .dt {
    margin-right: 20rpx;
  }
.control-list {
  font-size: 28rpx;
  background: transparent;
}
  .control-list>view {
    line-height: 120rpx;
    padding: 0 30rpx;
    margin-top: 10rpx;
    background: #fff;
  }