/* pages/commodity/waresDetail/index.wxss */
.container {
  padding-bottom: 120rpx;
}
.swiper {
  width: 100%;
  height: 750rpx;
  background-color: #000;
}

.swiper-item {
  vertical-align: middle;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.name {
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  position: relative;
}

.label-cell {
  padding: 14rpx 20rpx;
  background-color: #fff;
}

.label {
  display: inline-block;
  width: 140rpx;
  height: 52rpx;
  color: #fff;
  line-height: 52rpx;
  text-align: center;
  border-radius: 8rpx;
  background-color: #ff9800;
  margin-right: 20rpx;
}

.intro {
  padding: 0 20rpx;
  background-color: #fff;
  line-height: 34rpx;
}

.btn-share {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
}
.layer {
  margin-top: 20rpx;
}