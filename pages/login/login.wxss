/* pages/portal/index.wxss */
.container {
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-between;
  background-color: #eaeaea;
}

.intro-cell {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  flex: row nowrap;
}

label {
  display: inline-block;
  width: 160rpx;
  height: 80rpx;
  color: #101010;
  text-align: right;
  line-height: 80rpx; 
}

 input {
   width: 320rpx;
   height: 80rpx;
   padding: 0 10rpx;
   border: none;
 }

 .code {
   position: relative;
 }

 .btn-getcode {
   width: 140rpx;
   height: 60rpx;
   font-size: 24rpx;
   border-radius: 4rpx;
   color: #fff;
   background-color: #059F9F;
   position: absolute;
   right: 18rpx;
   top: 10rpx;
 }

 .tips {
   line-height: 50rpx;
   padding: 0 10rpx;
 }
.bom-panel {
  padding-bottom: 200rpx;
}

 .btn-submit {
   position: fixed;
   bottom: 0;
   width: 100%;
   height: 112rpx;
   line-height: 112rpx;
   color: #fff;
   border-radius: 0;
   background-color: #059F9F; 
 }