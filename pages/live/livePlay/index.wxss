/* pages/live/liveRoom/index.wxss */
.container {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}

.live {
  width: 750rpx;
  height: 600rpx;
  position: relative;
}

.follow {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}

.follow .btn-success {
  width: 112rpx;
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.boarder-cell {
  padding: 0 10rpx;
  width: 100%;
}
.boarder {
  height: 500rpx;
  width: 100%;
  overflow: auto;
  border-radius: 8rpx;
  background-color: rgba(0, 0, 0, 0.2);
}

.chat .news-item {
  font-size: 28rpx;
	line-height: 50rpx;
  color: #fff;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.controls {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 10rpx 0;
}
.controls .left {
  padding-left: 20rpx;
}
.controls .right {
  padding-right: 20rpx;
}

.v-icon {
  display: inline-block;
}

cover-image {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
}

.news-item image {
  height: 30rpx;
  vertical-align: middle;
}

.news-item .s {
  width: 50rpx;
}

.news-item .m {
  width: 82rpx;
}

.news-item .b {
  width: 120rpx;
}

.news-item .level-cell {
  float: left;
}

.news-item .sys-name {
  float: left;
  color: #f9963e;
}

.news-item .sys-ct {
  display: inline;
  color: #7e5596;
}

.news-item .wel {
  color: #000;
}

.news-item .msg {
  display: inline;
  color: #fff;
}

.news-item .u-name {
  display: inline;
  color: #ffd350;
}

.news-item .pup {
  display: inline;
  color: #5733f0;
}

.news-item .news-img-gift {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}

.foot {
  /* position: fixed;
  width: 100%;
  left: 0;
  bottom: 0; */
  display: flex;
  flex-wrap: row nowrap;
  align-items: center;
  padding: 10rpx 0;
  background-color: #eaeaea;
  z-index: 1000;
}

.foot input {
  width: 320rpx;
  height: 60rpx;
  font-size: 28rpx;
  line-height: 58rpx;
  border: 1rpx solid #797979;
  border-radius: 30rpx;
  padding: 10rpx;
  background-color: #fff;
}

.foot button {
  width: 80rpx;
  height:60rpx;
  color:#101010;
  font-size:24rpx;
  border:1rpx solid #eaeaea;
  background:#eaeaea;
  margin: 0 30rpx 0 0;
}

.foot .icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  color: #fff;
  justify-content: space-around;
  border-radius: 50%;
  background-color: #a9a9a9;
  margin-right: 20rpx;
}

.foot .icon image {
  width: 50rpx;
  height: 50rpx;
}



.panel {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
}

.gift-cell {
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: 1000;
}

.gift-list {
  width: 100%;
  height: 500rpx;
  background-color: #797979;
}

.swiper-panel {
  display: flex;
  flex-flow: row wrap;
  padding: 0 20rpx;
}

.gift-item {
  font-size: 16rpx;
  color: #fff;
  flex-grow: 1;
  text-align: center;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.selected {
  box-shadow: 0 0 0 4rpx #fff inset;
}

.gift-name {
  font-size: 24rpx;
}

.price-cell {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
}

.gift-price {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  text-align: center;
  font-size: 24rpx;
}

.gift-item .img-gift{
  width: 150rpx;
  height: 150rpx;
}

.gift-item .s-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}

.gift-ft {
  display: flex;
  width: 100%;
  height: 78rpx;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  background-color: #797979;
  border-top: 2rpx solid #11c2d1;
  padding: 0 20rpx;
}

.gift-ft image {
  width: 50rpx;
  height: 50rpx;
}

.gift-ft button {
  color: #fff;
  font-size: 36rpx;
  background: #11c2d1;
}

.gift-ft .left {
  display: flex;
  flex-flow: row nowrap;
}
.gift-ft .left view {
  font-size: 36rpx;
  margin-left: 30rpx;
}

.goods-cell {
  position: fixed;
  width: 100%;
  height: 430rpx;
  left: 0;
  bottom: 80rpx;
  padding: 0 20rpx;
}

.goods-body {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
  background-color: #797979;
  font-size: 28rpx;
  color: #fff;
  padding: 10rpx 20rpx;
}

.goods-item {
  float: left;
  width: 206rpx;
  margin-left: 13rpx;
  text-align: center;
}

.goods-body .head {
  font-size: 28rpx;
  line-height: 60rpx;
}

.goods-item image {
  width: 204rpx;
  height: 204rpx;
  border: 1rpx solid #fff;
}

.goods-item view {
  font-size: 28rpx;
  line-height: 50rpx;
}

.goods-item .img-cell {
  width: 206rpx;
  height: 206rpx;
  position: relative;
}

.goods-item .shop-name {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 204rpx;
  color: #fff;
  line-height: 40rpx;
  background-color: rgba(0, 0, 0, 0.2);
}

.goods-item button {
  width: 100rpx;
  height: 40rpx;
  font-size: 20rpx;
  color: #fff;
  border: 1rpx solid #fff;
  line-height: 38rpx;
  border-radius: 6rpx;
  background-color: transparent;
}

.unread {
  position: fixed;
  left: 20rpx;
  bottom: 80rpx;
  color: #009688;
  background-color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.line-price {
  text-decoration-line: line-through;
	text-decoration-color: red;
}