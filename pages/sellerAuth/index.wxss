/* pages/sellerAuth/index.wxss */
.layer {
  display: flex;
  flex-flow: row nowrap;
  min-height: 80rpx;
}

.left {
  flex-basis: 160rpx;
  text-align: right;
  line-height: 80rpx;
}

.right {
  flex-grow: 1;
}

.right input {
  width: 90%;
  height: 80rpx;
  color: #979696;
  border: none;
}
.right .row {
  line-height: 80rpx;
}

.right .file-cell {
  padding: 20rpx 0;
}
.file-cell .img-cell {
  position: relative;
  width: 220rpx;
  height: 220rpx;
}

.file-cell image {
  width: 220rpx;
  height: 220rpx;
}

.file-cell icon {
  position: absolute;
  top: 0;
  right: 0;
}

.ck-cell {
  padding: 20rpx 20rpx;
}

.ck-cell checkbox-group {
  display: inline-block;
}

.ck-cell navigator {
  display: inline-block;
  line-height: 60rpx;
  color: #00b7ff;
}
.prompt-wrap {
  min-height: 100vh;
}
.prompt-cont {
  display: flex;
  min-height: 100vh;
  flex-flow: column nowrap;
	justify-content: space-between;
  text-align: center;
}

.prompt-cont .icon {
  padding: 216rpx 0 80rpx 0;
}

.prompt-cont .tips {
  padding: 0 20rpx;
  line-height: 60rpx;
}