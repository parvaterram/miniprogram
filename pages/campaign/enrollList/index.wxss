/* pages/campaign/enrollList/index.wxss */
.container {
  padding-bottom: 120rpx;
}
.title {
  color: #666;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
}

.tab-bar {
  margin-bottom: 10rpx;
}

.li-item .head {
  display: flex;
  flex-flow: row nowrap;
  padding: 10rpx;
}

.head .avatar {
  flex-basis: 180rpx;
  height: 180rpx;
  border-radius: 4rpx;
  position: relative;
  margin-right: 10rpx;
}

.head .img-avatar {
  width: 180rpx;
  height: 180rpx;
}

.head .state {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 40rpx;
  color: #ff4081;
  line-height: 40rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.6);
}

.head .info {
  flex-grow: 1;
  line-height: 40rpx;
}

.info .type {
  display: inline-block;
  width: 120rpx;
  height: 60rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  background-color: #059F9F;
  border-radius: 4rpx;
}

.info .auth-type {
  display:inline-block;
  height:60rpx;
  color:#fff;
  line-height:60rpx;
  text-align:center;
  background-color: #8bc34a;
  border-radius:4rpx;
  margin-left: 10rpx;
  padding: 0 14rpx;
}
.body {
  display: flex;
  flex-flow: row nowrap;
  padding: 0 10rpx;
}
.body view {
  flex-grow: 1;
  line-height: 40rpx;
}

.foot {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}

.red {
  background-color: #ff4081;
}
.grey {
  background-color: #979696;
}
.blue {
  background-color: #46c4ff;
}

.pop-bd view {
  height: 60rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  color: #ff4081;
}
.pop-bd view input {
  width: 400rpx;
  height: 52rpx;
  border: 1rpx solid #bbb;
  font-size: 28rpx;
  color: #888;
  padding-left: 10rpx;
  margin-left: 20rpx;
}